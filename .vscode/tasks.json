{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug",
            "type": "shell",
            "command": "",
            "args": ["g++","-std=c++11", "${relativeFile}", "-o","a.exe"]
        },
        {
            "label": "g++ build active file",
            "type": "shell",
            "command": "",
            "args": [
                "g++","-std=c++11", "main.cpp", "planner.cpp", "node.cpp", "-g", "-o","${fileBasenameNoExtension}.out", "&&", "clear"
            ],
            "group": {
                "kind": "build",
                "isDefault": true  
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Compile and run",
            "type": "shell",
            "command": "",
            "args": [
                "g++","-std=c++11", "main.cpp", "planner.cpp", "node.cpp", "-I", "/usr/include/python2.7", "-I", "../matplotlib-cpp", "-I", "/usr/local/lib/python2.7/dist-packages/numpy/core/include/", "-l", "python2.7", "-o", "${fileBasenameNoExtension}.out", "&&", "clear" , "&&" , "./${fileBasenameNoExtension}.out", "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true  
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        
    ]
}